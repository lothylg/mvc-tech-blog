        <div id="mainCont">
            <div class="col-12 p-3 bg-info row">
                <div class="text-center">Post</div>            
            </div>
        </div>
        </header>    
        <div id="cardContainer" class="col-md-12 border border-3 m-4 p-3">
            <div id="blogCard" class="m-2 row">
                <div id="cardTitle" class="col-12 border bg-success p-2 d-flex justify-content-between m-1">
                    <h5 class="m-3"> {{post.content}}</h5>
                    <p>-{{post.username}} on {{post.date_posted}}</p>
                </div> 
                <div id="existingComments" class="col-12 border border-3 p-2 my-2">
                    {{#each comments as |comment|}}
                    <p>{{comment.content}}</p>
                    <p>-{{comment.username}} {{comment.date_posted}}</p>  
                </div>
                <div id="addAComment" class="col-12 row border border-3">
                    <label class="p-2">Add your own comment!</label> </br>
                    <input type="textarea" id="blogContent" class="col-12 p-2">
                    <button type="button" id="editBtn" class="btn btn-dark col-4 m-2">Submit</button>
                </div>
                
            </div>
        </div>